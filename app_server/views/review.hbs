<div class="container my-3 mt-sm-4">

    <H2 class="publish-h2">Leave your review:</H2>
    <form method="post" action="" id="reviewform" role="form">
        <div class="input-group col-sm-12">
            <textarea class="form-control" id="TextArea" name="comment" rows="10"></textarea>
        </div>

        <div class="row align-items-center justify-content-center">
            <div class="rating">
                <label>
                    <input type="radio" id="myRadio" name="stars" value="1" />
                    <span class="icon">★</span>
                </label>
                <label>
                    <input type="radio" id="myRadio" name="stars" value="2" />
                    <span class="icon">★</span>
                    <span class="icon">★</span>
                </label>
                <label>
                    <input type="radio" id="myRadio" name="stars" value="3" />
                    <span class="icon">★</span>
                    <span class="icon">★</span>
                    <span class="icon">★</span>
                </label>
                <label>
                    <input type="radio" id="myRadio" name="stars" value="4" />
                    <span class="icon">★</span>
                    <span class="icon">★</span>
                    <span class="icon">★</span>
                    <span class="icon">★</span>
                </label>
                <label>
                    <input type="radio" id="myRadio" name="stars" value="5" />
                    <span class="icon">★</span>
                    <span class="icon">★</span>
                    <span class="icon">★</span>
                    <span class="icon">★</span>
                    <span class="icon">★</span>
                </label>
            </div>
        </div>


        <div class="row justify-content-center mt-4">
            <input type="submit" class="btn btn-lg btn-secondary"></input>
        </div>

    </form>

</div>




